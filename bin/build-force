#!/bin/bash

SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"
BASEPATH=$SCRIPTPATH/../

cd $BASEPATH

MARKER=.openshift/markers/force_clean_build

if [ ! -f $MARKER ]
then
  touch $MARKER
  git add $MARKER
  git commit -m "Force Clean Build" &>/dev/null
else
  echo "Did not add marker, already exists"
fi
